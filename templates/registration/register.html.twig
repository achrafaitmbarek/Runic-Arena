{% extends 'base.html.twig' %}

{% block title %}Join the Battle
{% endblock %}

{% block body %}
	<div
		class="min-h-screen flex items-center justify-center relative">
		<!-- Background Image with Opacity -->
		<div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ asset('images/LoginBg.png') }}'); opacity: 0.6;"></div>
		<div class="absolute inset-0 bg-cover bg-center" style="background-color: #0A0B1E; opacity:0.8"></div>

		<!-- Content -->
		<div class="">
			<div class="relative flex flex-col backdrop-blur-sm" style="background-color: #0A0B1E; padding-bottom: 4rem; padding-top: 4rem; padding-left: 12rem; padding-right: 12rem; border-radius: 32px; border: 1px solid #FFD700;">
				<div class="text-center mb-8">
					<svg class="w-12 h-12 mx-auto mb-4 text-gold" width="36" height="44" viewbox="0 0 36 44" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M17.9999 1.16577C17.4194 1.16577 16.8579 1.37296 16.4166 1.75004C12.7916 4.91671 7.58325 7.41671 3.41659 7.41671C2.86405 7.41671 2.33415 7.6362 1.94345 8.0269C1.55275 8.4176 1.33325 8.94751 1.33325 9.50004V24.0834C1.33325 34.5 8.62492 39.7084 17.3124 42.7084C17.7615 42.8756 18.2544 42.883 18.7083 42.7292C27.3749 39.7084 34.6666 34.5 34.6666 24.0834V9.50004C34.6666 8.94751 34.4471 8.4176 34.0564 8.0269C33.6657 7.6362 33.1358 7.41671 32.5833 7.41671C28.4166 7.41671 23.2291 4.93754 19.5833 1.75004C19.1419 1.37296 18.5804 1.16577 17.9999 1.16577ZM17.9999 1.16577V42.8334" stroke="#FFD700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
					<h1 class="text-3xl font-bold text-gold">Join the Battle</h1>
				</div>

				{{ form_start(registrationForm) }}
				<div style="position: relative; margin-bottom: 40px;">
					<div style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%);">
						<svg width="18" height="14" viewbox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M16.5 3.25L9.7725 7.525C9.54095 7.67007 9.27324 7.74701 9 7.74701C8.72676 7.74701 8.45905 7.67007 8.2275 7.525L1.5 3.25M3 1H15C15.8284 1 16.5 1.67157 16.5 2.5V11.5C16.5 12.3284 15.8284 13 15 13H3C2.17157 13 1.5 12.3284 1.5 11.5V2.5C1.5 1.67157 2.17157 1 3 1Z" stroke="#0D1321" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					{{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'w-full rounded-lg text-gray-900 placeholder-gray-500',
                                'style': 'padding: 16px 16px 16px 56px; width:24rem; background: white;',
                                'placeholder': 'Email'
                            }
                        }) }}
				</div>

				<div style="position: relative; margin-bottom: 40px;">
					<div style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%);">
						<svg width="18" height="17" viewbox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M11.625 5.625L13.35 7.35C13.4902 7.48742 13.6787 7.56439 13.875 7.56439C14.0713 7.56439 14.2598 7.48742 14.4 7.35L15.975 5.775C16.1124 5.6348 16.1894 5.44631 16.1894 5.25C16.1894 5.05369 16.1124 4.8652 15.975 4.725L14.25 3M15.75 1.5L8.55 8.7M9.75 11.625C9.75 13.9032 7.90317 15.75 5.625 15.75C3.34683 15.75 1.5 13.9032 1.5 11.625C1.5 9.34683 3.34683 7.5 5.625 7.5C7.90317 7.5 9.75 9.34683 9.75 11.625Z" stroke="#0A0B1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					{{ form_widget(registrationForm.plainPassword.first, {
                            'attr': {
                                'class': 'w-full rounded-lg text-gray-900 placeholder-gray-500',
                                'style': 'padding: 16px 16px 16px 56px; width:24rem; background: white;',
                                'placeholder': 'Password'
                            }
                        }) }}
				</div>

				<div style="position: relative; margin-bottom: 40px;">
					<div style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%);">
						<svg width="18" height="17" viewbox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M11.625 5.625L13.35 7.35C13.4902 7.48742 13.6787 7.56439 13.875 7.56439C14.0713 7.56439 14.2598 7.48742 14.4 7.35L15.975 5.775C16.1124 5.6348 16.1894 5.44631 16.1894 5.25C16.1894 5.05369 16.1124 4.8652 15.975 4.725L14.25 3M15.75 1.5L8.55 8.7M9.75 11.625C9.75 13.9032 7.90317 15.75 5.625 15.75C3.34683 15.75 1.5 13.9032 1.5 11.625C1.5 9.34683 3.34683 7.5 5.625 7.5C7.90317 7.5 9.75 9.34683 9.75 11.625Z" stroke="#0A0B1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					{{ form_widget(registrationForm.plainPassword.second, {
                            'attr': {
                                'class': 'w-full rounded-lg text-gray-900 placeholder-gray-500',
                                'style': 'padding: 16px 16px 16px 56px; width:24rem; background: white;',
                                'placeholder': 'Confirm Password'
                            }
                        }) }}
				</div>

				<button type="submit" class="w-full font-medium rounded-lg transition-colors duration-200" style="padding: 16px; background-color: #FFD700; color: #111827;">
					Join Battle
				</button>
				{{ form_end(registrationForm) }}

				<div class="text-center mt-6">
					<p class="text-gray-400">
						Already a warrior?
						<a href="{{ path('app_login') }}" class="text-[#FFD700] hover:text-yellow-400 font-medium">
							Enter Arena
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
