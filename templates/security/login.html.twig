{% extends 'base.html.twig' %}

{% block title %}Enter the Arena
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center relative">
		<div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ asset('images/LoginBg.png') }}'); opacity: 0.6;"></div>
		<div class="absolute inset-0 bg-cover bg-center" style="background-color: #0A0B1E; opacity:0.8"></div>

		<div class="container">
			<div class="login-container relative flex flex-col backdrop-blur-sm" style="background-color: #0A0B1E; border: 1px solid #FFD700; border-radius: 32px;">
				<div class="text-center mb-6 sm:mb-8">
					<svg class="w-8 h-8 sm:w-12 sm:h-12 mx-auto mb-3 sm:mb-4 text-gold" width="36" height="44" viewbox="0 0 36 44" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M17.9999 1.16577C17.4194 1.16577 16.8579 1.37296 16.4166 1.75004C12.7916 4.91671 7.58325 7.41671 3.41659 7.41671C2.86405 7.41671 2.33415 7.6362 1.94345 8.0269C1.55275 8.4176 1.33325 8.94751 1.33325 9.50004V24.0834C1.33325 34.5 8.62492 39.7084 17.3124 42.7084C17.7615 42.8756 18.2544 42.883 18.7083 42.7292C27.3749 39.7084 34.6666 34.5 34.6666 24.0834V9.50004C34.6666 8.94751 34.4471 8.4176 34.0564 8.0269C33.6657 7.6362 33.1358 7.41671 32.5833 7.41671C28.4166 7.41671 23.2291 4.93754 19.5833 1.75004C19.1419 1.37296 18.5804 1.16577 17.9999 1.16577ZM17.9999 1.16577V42.8334" stroke="#FFD700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
					<h1 style="font-size: 1.5rem; font-weight: bold; color: #FFD700;">Enter the Arena</h1>
				</div>

				<form method="post" class="form-container">
					{% if error %}
						<div style="padding: 0.875rem; margin-bottom: 2rem; background: rgba(185, 28, 28, 0.5); border: 1px solid rgba(239, 68, 68, 0.2); border-radius: 0.375rem; color: #f87171; font-size: 0.875rem;">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					<div style="position: relative; margin-bottom: 1.5rem;">
						<div style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%);">
							<svg width="16" height="12" viewbox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M16.5 3.25L9.7725 7.525C9.54095 7.67007 9.27324 7.74701 9 7.74701C8.72676 7.74701 8.45905 7.67007 8.2275 7.525L1.5 3.25M3 1H15C15.8284 1 16.5 1.67157 16.5 2.5V11.5C16.5 12.3284 15.8284 13 15 13H3C2.17157 13 1.5 12.3284 1.5 11.5V2.5C1.5 1.67157 2.17157 1 3 1Z" stroke="#0D1321" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" style="width: 100%; padding: 14px 14px 14px 48px; border-radius: 0.5rem; background: white; color: #111827; font-size: 0.875rem;" placeholder="Email" autocomplete="email" required autofocus>
					</div>

					<div style="position: relative; margin-bottom: 1.5rem;">
						<div style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%);">
							<svg width="16" height="15" viewbox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M11.625 5.625L13.35 7.35C13.4902 7.48742 13.6787 7.56439 13.875 7.56439C14.0713 7.56439 14.2598 7.48742 14.4 7.35L15.975 5.775C16.1124 5.6348 16.1894 5.44631 16.1894 5.25C16.1894 5.05369 16.1124 4.8652 15.975 4.725L14.25 3M15.75 1.5L8.55 8.7M9.75 11.625C9.75 13.9032 7.90317 15.75 5.625 15.75C3.34683 15.75 1.5 13.9032 1.5 11.625C1.5 9.34683 3.34683 7.5 5.625 7.5C7.90317 7.5 9.75 9.34683 9.75 11.625Z" stroke="#0A0B1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<input type="password" name="password" id="inputPassword" style="width: 100%; padding: 14px 14px 14px 48px; border-radius: 0.5rem; background: white; color: #111827; font-size: 0.875rem;" placeholder="Password" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button type="submit" style="width: 100%; padding: 14px; border-radius: 0.5rem; background-color: #FFD700; color: #111827; font-weight: 500; font-size: 0.875rem; transition: background-color 0.2s;">
						Enter Battle
					</button>
				</form>

				<div style="text-align: center; margin-top: 1.5rem;">
					<p style="color: #9CA3AF; font-size: 0.875rem;">
						Need an account?
						<a href="{{ path('app_register') }}" style="color: #FFD700; font-weight: 500; text-decoration: none;">
							Join the Battle
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>

	<style>
		.container {
			width: 100%;
			padding: 0 1rem;
			margin: 0 auto;
		}

		.login-container {
			width: 100%;
			padding: 2rem 1rem;
			margin: 1rem auto;
		}

		.form-container {
			width: 100%;
			max-width: 24rem;
			margin: 0 auto;
			padding: 0 1rem;
		}

		@media(min-width: 640px) {
			.container {
				padding: 0 2rem;
			}

			.login-container {
				width: 50%;
				padding: 3rem;
				margin: 0 auto;
			}

			.form-container {
				padding: 0;
			}
		}

		@media(min-width: 1024px) {
			.login-container {
				padding: 4rem 8rem;
			}
		}

		input::placeholder {
			color: #6B7280;
			opacity: 0.8;
		}

		button[type="submit"]:hover {
			background-color: #E6C200;
		}
	</style>
{% endblock %}
