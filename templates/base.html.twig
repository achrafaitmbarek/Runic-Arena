<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Potta+One&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('build/app.css') }}">
		{% endblock %}

		{% block javascripts %}

			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
		<style>
			.navbar {
				position: fixed;
				width: 100%;
				z-index: 50;
				padding: 1.25rem 0;
				background-color: #0D1321;
				font-family: 'Cinzel', serif;
			}

			.navbar-container {
				max-width: 1280px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			.desktop-menu {
				display: none;
			}

			.desktop-grid {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr;
				align-items: center;
				gap: 1rem;
			}

			.nav-links {
				display: flex;
				align-items: center;
			}

			.nav-links a {
				color: white;
				text-decoration: none;
				margin-right: 3rem;
			}

			.nav-links a:hover {
				color: #D1D5DB;
			}

			.logo-container {
				display: flex;
				justify-content: center;
			}

			.logo-container img {
				height: 5rem;
			}

			.auth-links {
				display: flex;
				align-items: center;
				gap: 1.5rem;
				margin-left: auto;
				white-space: nowrap;
			}

			.auth-links a {
				margin-left: 0;
			}

			.mobile-menu {
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.mobile-menu img {
				height: 4rem;
			}

			.hamburger-button {
				background: none;
				border: none;
				color: white;
				cursor: pointer;
			}

			.mobile-dropdown {
				display: none;
				padding: 1rem;
				background-color: #0D1321;
			}

			.mobile-dropdown.active {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 1rem;
			}

			.mobile-dropdown a {
				display: inline-block;
				color: white;
				text-decoration: none;
				padding: 0.75rem 1rem;
				text-align: center;
				width: fit-content;
			}

			.mobile-dropdown.yellow-link {
				color: #FBBF24;
				background: transparent;
				padding: 0.5rem 1rem;
				border-radius: 0.5rem;
			}

			.yellow-link:hover {
				color: #F59E0B;
			}

			.yellow-button {
				background-color: #FBBF24;
				color: black;
				padding: 0.75rem 1.5rem;
				border-radius: 0.5rem;
				font-weight: 500;
				transition: background-color 0.3s;
				white-space: nowrap;
				display: inline-block;
			}

			.yellow-button:hover {
				background-color: #F59E0B;
			}

			@media(min-width: 768px) {
				.desktop-menu {
					display: block;
				}

				.mobile-menu {
					display: none;
				}

				.mobile-dropdown {
					display: none !important;
				}
			}
			.responsive-text {
				font-size: 0.7rem;
				font-family: 'Playfair Display', serif;
			}
			.quote-mark {
				color: #FFD700;
				font-size: 1rem;
			}
			@media(min-width: 640px) {
				.responsive-text {
					font-size: 0.9rem;
					font-size: 1.2rem;
				}
				.quote-mark {
					font-size: 2rem;
				}
			}
			html,
			body {
				height: 100%;
				margin: 0;
			}

			body {
				display: flex;
				flex-direction: column;
				min-height: 100vh;
				text-white: white;
				font-family: 'Playfair Display', serif;
				background-color: #1a1332;
			}

			main {
				flex: 1 0 auto;
				padding-top: 5rem;
			}

			footer {
				flex-shrink: 0;
				background-color: #0A0B1E;
				padding: 2rem 0;
				margin-top: auto;
			}
		</style>
	</head>
	<body class=" text-white font-playfair  bg-[#1a1332]">
		<nav class="navbar">
			<div class="navbar-container">
				<div class="desktop-menu">
					<div class="desktop-grid">
						<div class="nav-links">
							<a href="{{ path('app_home') }}">Home</a>
							<a href="#cards">Cards</a>
							<a href="#features">Features</a>
						</div>

						<div class="logo-container">
							<img src="{{ asset('/images/logo.png') }}" alt="Runic Arena">
						</div>

						<div class="auth-links">
							<a href="#kickstarter">Kickstarter</a>
							<a href="#lore">Lore/Story</a>
							{% if app.user %}
								<a href="/member/card" class="yellow-link">My Cards</a>
								<a href="{{ path('app_logout') }}" class="yellow-button">Logout</a>
							{% else %}
								<a href="{{ path('app_login') }}" class="yellow-link">Sign In</a>
								<a href="{{ path('app_register') }}" class="yellow-button">Sign Up</a>
							{% endif %}
						</div>
					</div>
				</div>
				<div class="mobile-menu">
					<button onclick="toggleMobileMenu()" class="hamburger-button">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"></path>
						</svg>
					</button>
					<img src="{{ asset('/images/logo.png') }}" alt="Runic Arena">
				</div>

				<div id="mobileMenu" class="mobile-dropdown">
					<a href="{{ path('app_home') }}">Home</a>
					<a href="#">Cards</a>
					<a href="#">Features</a>
					<a href="#">Kickstarter</a>
					<a href="#">Lore/Story</a>
					{% if app.user %}
						<a href="/member/card" class="yellow-link">My Cards</a>
						<a href="{{ path('app_logout') }}" class="yellow-button">Logout</a>
					{% else %}
						<a href="{{ path('app_login') }}" class="yellow-link">Sign In</a>
						<a href="{{ path('app_register') }}" class="yellow-button">Sign Up</a>
					{% endif %}
				</div>
			</div>
		</nav>

		<main class="pt-20"> {% block body %}{% endblock %}
			</main>

			<footer>
				<div class="container mx-auto divide-y divide-yellow-400">
					<div class="flex items-center justify-center space-x-20 mb-6">
						<a href="{{ path('app_home') }}" class="text-white text-lg">Accueil</a>
						<img src="{{ asset('/images/logo.png') }}" alt="Runic Arena" class="h-16 mx-4">
						<a href="#" class="text-white text-lg border border-white rounded-md px-6 py-2">Join the Battle</a>
					</div>
				</div>
				<div class="text-center mt-8">
					<span class="text-[#FFD700] text-sm">
						© Runic Arena,
						{{ 'now'|date('Y') }}. Tout droits réservés -
						<a href="#" class="text-[#FFD700]">Mentions légales</a>
					</span>
				</div>
			</footer>
		</body>
		<script>
			function toggleMobileMenu() {
const menu = document.getElementById('mobileMenu');
menu.classList.toggle('active');
}
		</script>
	</html>
</body></html>
